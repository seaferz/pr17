<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <!--button-->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--task1-->
        <TextBlock 
            Text="Введите стороны a, b, c:"
            Grid.Row="0" 
            Grid.Column="0"  
            VerticalAlignment="Center"
            TextAlignment="Center"/>

        <StackPanel 
            Orientation="Horizontal" 
            Grid.Row="0" 
            Grid.Column="1" 
            HorizontalAlignment="Center">
            <TextBox x:Name="txtA" Width="50" Margin="4"/>
            <TextBox x:Name="txtB" Width="50" Margin="4"/>
            <TextBox x:Name="txtC" Width="50" Margin="4"/>
        </StackPanel>

        <Button 
            Content="Вычислить объём и площадь"
            Grid.Row="1" 
            Grid.Column="0" 
            Grid.ColumnSpan="2"
            Background="LightBlue"
            Click="CalculateBoxData"/>

        <TextBlock 
            x:Name="txtBoxResult"
            Grid.Row="2" 
            Grid.Column="0" 
            Grid.ColumnSpan="2"
            FontSize="16" 
            FontWeight="Bold" 
            TextAlignment="Center"/>

        <!--task2-->
        <TextBlock 
            Text="Введите двузначное число:"
            Grid.Row="3" 
            Grid.Column="0" 
            VerticalAlignment="Center" 
            TextAlignment="Center"/>

        <TextBox 
            x:Name="txtTwoDigit" 
            Grid.Row="3" 
            Grid.Column="1" 
            Width="100" 
            HorizontalAlignment="Center"/>

        <Button 
            Content="Сумма и произведение цифр"
            Grid.Row="4" 
            Grid.Column="0" 
            Grid.ColumnSpan="2"
            Background="LightGreen"
            Click="CalculateDigits"/>

        <TextBlock 
            x:Name="txtDigitResult"
            Grid.Row="5" 
            Grid.Column="0" 
            Grid.ColumnSpan="2"
            FontSize="16" 
            FontWeight="Bold" 
            TextAlignment="Center"/>

        <!--button-->
        <Button 
            Content="О программе"
            Grid.Row="6" 
            Grid.Column="0"
            Background="Pink"
            Click="ShowAbout"/>

        <Button 
            Content="Выход"
            Grid.Row="6" 
            Grid.Column="1"
            Background="Pink"
            Click="ExitApplication"/>
    </Grid>
</Window>